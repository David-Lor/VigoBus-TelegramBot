# Set your bot Token generated from @BotFather
#TOKEN=
TOKEN=/run/secrets/telegram_token  # use this instead to load the token from Docker secret file telegram_token.txt

ADMIN_USERID=  # set your Telegram User ID

API_TIMEOUT=10
PERSIST_TIMEOUT=1.5
SKIP_PREV_UPDATES=1

USER_RATE_LIMIT_AMOUNT=5
USER_RATE_LIMIT_TIME=2

# IMPORTANT: the STATIC_PATH must be set, cannot be autodetected when deployed on Docker
# The STATIC_PATH must match the APP_NAME
APP_NAME=VigoBusBot
STATIC_PATH=/home/user/VigoBusBot/static

PERSIST_SALT=e7248059-e40e-49c5-9873-bd83bfd215cd
#PERSIST_SALT=/run/secrets/telegram_persist_salt  # use this instead to load the salt from Docker secret file telegram_persist_salt.txt

LOG_LEVEL=debug
